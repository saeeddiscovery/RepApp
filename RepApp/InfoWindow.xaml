					x:Name="tb_height"
					TextWrapping="Wrap"
					TextAlignment="Right"
					Width="31"
					Grid.Column="0"
					Grid.Row="0"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					Margin="0,56,95.564,0" Height="23" />
